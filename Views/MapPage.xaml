                     Orientation="Horizontal"
                     Margin="16,8,16,0"
                     VerticalOptions="Center">

            <Frame CornerRadius="10"
                   Padding="0"
                   HasShadow="False"
                   BackgroundColor="White"
                   HeightRequest="40"
                   HorizontalOptions="FillAndExpand">
                <SearchBar x:Name="SearchBar"
                           Placeholder="�����"
                           BackgroundColor="Transparent"
                           Margin="8,0"
                           VerticalOptions="Center"
                           HeightRequest="40"/>
            </Frame>

            <ImageButton x:Name="FilterButton"
                         Source="map_category_icon.png"
                         WidthRequest="40"
                         HeightRequest="40"
                         CornerRadius="10"
                         BackgroundColor="White"
                         Aspect="AspectFill"
                         Padding="0"
                         Margin="8,0,0,0"
                         VerticalOptions="Center"/>
        </StackLayout>

